<project name="teste" basedir="." default="compila">
         
         
    <target name="limpa">
        <delete dir="ant2" />
        <delete dir="docs" />
    </target>

    <target name="dir">
        <mkdir dir="ant2" />
        <mkdir dir="docs" />
    </target>

    <target name="compila" depends="dir">
        <javac srcdir="./src" destdir="ant2">
          <classpath>
                     <pathelement path="./lib/easyaccept.jar"/>
          </classpath>
        </javac>
    </target>

  <target name="testa">
       <!--   <java classname="game.test.MonopolyTest" >
              <classpath>
                  <pathelement path="./ant2" />
                  <pathelement path="./lib/easyaccept.jar"/>
              </classpath>
          </java>      -->
          <exec dir="." executable="cmd" os="Windows XP">
            <arg line="/c testa.bat"/>
          </exec>
  </target>
  
  <target name="doc" depends="dir">
    <javadoc
           access="public"
           destdir="docs"
           author="true"
           version="true"
           use="true"
           windowtitle="Monopoly-uefs"
       >

        <fileset dir="src">
            <include name="**/*.java"/>
        </fileset>
    </javadoc>
</target>

</project>